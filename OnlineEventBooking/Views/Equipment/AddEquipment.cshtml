@model DAL.Equipment
@{
    ViewBag.Title = "AddEquipment";
}

<h2>Add Equipment</h2>


@using (Html.BeginForm("Save", "Equipment", FormMethod.Post  ,new { enctype = "multipart/form-data"  }))
{

<div class="form-horizontal">
    <div class="form-group">
        @Html.LabelFor(model => model.EquipmentName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.EquipmentName, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.EquipmentName)
        </div>
    </div>
    <br />
    @Html.Label("Upload Equipment")  : <input type="file" name="ImageFile" value="" />

    <br />
    <div class="form-group">
        @Html.LabelFor(model => model.EquipmentCost, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.EquipmentCost, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.EquipmentCost)
        </div>
    </div>
    <br />

    <input type="submit" name="submit" value="save"  />
    <input type="button" name="cancel" value="cancel" />
</div>







        }

