@model IEnumerable<DAL.Venue>

@{
    ViewBag.Title = "List";
}

<h2>List</h2>

<p>
    @Html.ActionLink("Create New", "SaveVenue")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.VenueName)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.VenueFilePath)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Createdby)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Createdate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VenueCost)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.VenueName)
        </td>
        
        <td>
            @*<img src="~/UploadImage/@Html.DisplayFor(modelItem => item.VenueFilename)" height="250px" width="350px" alt="No Image" style="margin-left: 192px;" />*@
            <img src="/UploadImage/@item.VenueFilePath" height="250px" width="350px" alt="No Image" style="margin-left: 192px;" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Createdby)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Createdate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VenueCost)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.VenueID }) |
            
            @Html.ActionLink("Delete", "Delete", new { id=item.VenueID })
        </td>
    </tr>
}

</table>
